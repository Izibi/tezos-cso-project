{
  "name": "tezos-cso-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "npm run db:migrate",
    "dev": "node server.js",
    "build": "next build",
    "start": "next start -- --port $PORT",
    "serve": "node server.js",
    "prod": "cross-env NODE_ENV=production npm run serve",
    "lint": "next lint",
    "db:migrate": "TS_NODE_PROJECT=tsconfig.knex.json knex migrate:latest",
    "db:rollback": "TS_NODE_PROJECT=tsconfig.knex.json knex migrate:rollback",
    "test:e2e:open": "cypress open --config pageLoadTimeout=30000,baseUrl=http://127.0.0.1:3000",
    "test:e2e:run": "cypress run --config pageLoadTimeout=30000,baseUrl=http://127.0.0.1:3000",
    "test:e2e": "npm run build && NODE_ENV=test start-server-and-test serve http://127.0.0.1:3000 test:e2e:run",
    "test:unit": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'",
    "test": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "@fontsource/cormorant": "^4.5.0",
    "@fontsource/libre-franklin": "^4.5.0",
    "@taquito/beacon-wallet": "^9.2.0",
    "@taquito/taquito": "^9.2.0",
    "apexcharts": "^3.27.2",
    "cross-env": "^7.0.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "knex": "^0.95.6",
    "next": "11.0.0",
    "next-auth": "latest",
    "pg": "^8.6.0",
    "react": "17.0.2",
    "react-apexcharts": "^1.3.9",
    "react-dom": "17.0.2",
    "swr": "^0.5.6"
  },
  "devDependencies": {
    "@testing-library/cypress": "^8.0.0",
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/react": "17.0.11",
    "autoprefixer": "^10.2.6",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cypress": "^8.0.0",
    "cypress-recurse": "1.8.1",
    "cypress-social-logins": "^1.11.3",
    "eslint": "7.29.0",
    "eslint-config-next": "11.0.0",
    "imap-simple": "5.0.0",
    "mailparser": "3.2.0",
    "mocha": "^9.0.3",
    "nodemailer": "6.6.3",
    "postcss": "^8.3.5",
    "start-server-and-test": "^1.12.6",
    "tailwindcss": "^2.2.2",
    "ts-node": "^7.0.1",
    "typescript": "4.3.4"
  }
}
