{
  "name": "tezos-cso-app",
  "version": "0.4.5",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "predev": "npm run db:migrate",
    "dev": "node server.js",
    "build": "next build",
    "start": "next start -- --port $PORT",
    "serve": "cross-env NODE_ENV=production node server.js",
    "lint": "next lint",
    "db:migrate": "TS_NODE_PROJECT=tsconfig.knex.json knex migrate:latest",
    "db:rollback": "TS_NODE_PROJECT=tsconfig.knex.json knex migrate:rollback",
    "pretest": "cross-env NODE_ENV=production npm run db:migrate",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e:open": "cypress open --config pageLoadTimeout=30000,baseUrl=http://127.0.0.1:3000",
    "test:e2e:run": "cypress run --config pageLoadTimeout=30000,baseUrl=http://127.0.0.1:3000,video=false --browser chrome --headed",
    "test:e2e": "npm run build && start-server-and-test serve http://127.0.0.1:3000 test:e2e:run",
    "test:unit": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'",
    "docs": "typedoc"
  },
  "dependencies": {
    "@fontsource/cormorant": "^4.5.0",
    "@fontsource/inter": "^4.5.1",
    "@fontsource/libre-franklin": "^4.5.0",
    "@taquito/beacon-wallet": "^9.2.0",
    "@taquito/taquito": "^9.2.0",
    "apexcharts": "^3.32.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "glossarizer": "^1.5.2",
    "jquery": "^3.6.0",
    "knex": "^0.95.15",
    "next": "^12.0.7",
    "next-auth": "latest",
    "pg": "^8.6.0",
    "react": "17.0.2",
    "react-apexcharts": "^1.3.9",
    "react-dom": "17.0.2",
    "swr": "^0.5.7"
  },
  "devDependencies": {
    "@testing-library/cypress": "^8.0.2",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/jquery": "^3.5.11",
    "@types/mocha": "^9.0.0",
    "@types/node-fetch": "^2.5.12",
    "@types/react": "17.0.11",
    "autoprefixer": "^10.4.2",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "cypress": "^8.7.0",
    "cypress-recurse": "1.8.1",
    "eslint": "7.29.0",
    "eslint-config-next": "11.0.0",
    "imap-simple": "5.0.0",
    "mailparser": "^3.4.0",
    "mocha": "^9.1.3",
    "nodemailer": "6.6.3",
    "postcss": "^8.4.5",
    "puppeteer-core": "10.2.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^2.2.19",
    "ts-node": "^7.0.1",
    "typedoc": "^0.22.10",
    "typedoc-plugin-rename-defaults": "^0.4.0",
    "typescript": "4.3.4"
  }
}
